<% provide(:title, "Tasks") %>
<div class="container d-flex justify-content-center">
    <div class="card text-center mt-5">
        <div class="card-header">
            <%= @task.name %>
        </div>
        <div class="card-body">
            <h5 class="card-title">Duration: <%= @task.amount %> Hours</h5>
            <%= link_to tasks_path, class:"card-link text-decoration-none my-3" do %>
            <i class="bi bi-arrow-left-square text-dark"></i>
            <% end %>
            <%= link_to edit_task_path(@task), class:"card-link text-decoration-none" do %>
            <i class="bi bi-pencil text-dark "></i>
            <% end %>
            <%= link_to @task, method: :delete, data: { confirm: 'Are you sure?'} do %>
            <i class="bi bi-trash text-dark"></i>
            <% end %>
        </div>
        <div class="card-footer text-muted">
            Author: <%= @task.author.name %><br />
            When: <%=time_ago_in_words(@task.created_at.localtime)%>
        </div>
    </div>
</div>
